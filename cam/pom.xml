<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>it.eng.cam</groupId>
    <artifactId>CAM</artifactId>
    <packaging>war</packaging>
    <version>2.0.0</version>
    <name>CAM Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <!-- !!Configure coherently with CAM BE Application!! -->
    <!-- oAuth, OAuth2 Supported at the moment -->
    <!-- Auth, is Keystone method authentication-->
    <properties>
        <authentication.service>oAuth</authentication.service>
        <horizon.url>http://localhost:8000</horizon.url>
        <!-- OAUTH2 CLIENT ID-->
       <!-- <client.id>6a636dc9ff1d4e4395ae01c60fb9d3b5</client.id> -->
        <client.id>4c6a29bf67e24a68a3c8826dc272ac14</client.id>
    </properties>
    <build>
        <finalName>CAM</finalName>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>3.0.0</version>
                    <configuration>
                        <webResources>
                            <resource>
                                <filtering>true</filtering>
                                <directory>src/main/webapp</directory>
                                <includes>
                                    <include>**/*.js</include>
                                </includes>
                            </resource>
                        </webResources>
                        <!--<outputDirectory>/Users/ascatox/Documents/Servers/apache-tomcat-8.0.33/webapps</outputDirectory>-->
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
